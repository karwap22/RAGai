{
    "manifest_version": 2,
    "name": "Text Extractor",
    "version": "1.0",
    "description": "Extracts all text from a webpage and summarizes it using Ollama.",
    "icons": {
        "48": "frontend/icon.png"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "<all_urls>"
    ],
    "background": {
        "scripts": ["frontend/background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "frontend/icon.png"
    },
    "sidebar_action": {
        "default_panel": "frontend/popup.html",
        "default_title": "Text Extractor"
    }
  }
  
